            @Html.DisplayNameFor(model => model.TimeReturned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeReturned)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentalFee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentalFee)
